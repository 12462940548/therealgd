{% from '_macros/icon.html.twig' import icon %}
{% spaceless %}
  {%- set notification_count = is_granted('ROLE_USER') ? app.user.notifications|length : 0 -%}

  <nav class="site-nav">
    <div class="site-nav__header">
      <a href="{{ path('raddit_app_front') }}" class="site-nav__logo">{{ raddit_app_site_name() }}</a>
      {# todo: accessibility #}
      <a href="#" class="site-nav__mobile-toggle {{ notification_count > 0 ? 'site-nav__mobile-toggle--has-notifications' }}" onclick="$(this).parents('.site-nav').find('.site-nav__inner').toggleClass('site-nav__inner--mobile-visible'); return false">{{ icon('menu') }}</a>
    </div>

    <div class="site-nav__inner">
      {# left portion of site nav #}
      <ul class="site-nav__menu">
        <li class="site-nav__item">
          <a href="{{ path('raddit_app_forum_list') }}" class="site-nav__link">{{ 'nav.forums'|trans }}</a>
        </li>

        <li class="site-nav__item">
          <a href="{{ path('raddit_app_wiki') }}" class="site-nav__link">{{ 'nav.wiki'|trans }}</a>
        </li>
      </ul>

      {# right portion of site nav #}
      <ul class="site-nav__menu right-nav">
        {% if not is_granted('ROLE_USER') %}
          <li class="site-nav__item">
            <a href="{{ path('raddit_app_login') }}" class="site-nav__link">{{ 'nav.log_in'|trans }}</a>
          </li>

          <li class="site-nav__item">
            <a href="{{ path('raddit_app_registration') }}" class="site-nav__link">{{ 'nav.register'|trans }}</a>
          </li>
        {% else %}
          {# notifications #}
          {% if notification_count > 0 %}
            <li class="site-nav__item site-nav__item--has-notifications">
              <a href="{{ path('raddit_app_inbox') }}" class="site-nav__link">
                {{- 'nav.inbox_count'|trans({'%count%': '<strong>%s</strong>'|format(notification_count|localizednumber)})|raw -}}
              </a>
            </li>
          {% endif %}

          {# submit button #}
          <li class="site-nav__item">
            <a href="{{ path('raddit_app_submit', {forum_name: forum.name ?? null}) }}" class="site-nav__link">
              {{- 'nav.submit'|trans -}}
            </a>
          </li>

          {# user menu #}
          <li class="site-nav__item dropdown-container">
            <a href="#" class="site-nav__link dropdown-toggle"><strong>{{ app.user.username }}</strong></a>
            <ul class="dropdown-menu">
              <li><a href="{{ path('raddit_app_user', {username: app.user.username}) }}">{{ icon('user') }} {{ 'nav.profile'|trans }}</a></li>
              <li><a href="{{ path('raddit_app_message_list') }}">{{ icon('mail') }} {{ 'nav.messages'|trans }}</a></li>
              <li><a href="{{ path('raddit_app_edit_user', {username: app.user.username}) }}">{{ icon('lock') }} {{ 'nav.my_account'|trans }}</a></li>
              <li><a href="{{ path('raddit_app_user_settings', {username: app.user.username}) }}">{{ icon('settings') }} {{ 'nav.user_settings'|trans }}</a></li>
              <li><a href="{{ path('raddit_app_user_block_list') }}">{{ icon('block') }} {{ 'nav.block_list'|trans }}</a></li>
              <li><a href="{{ logout_path() }}">{{ icon('logout') }} {{ 'nav.log_out'|trans }}</a></li>
            </ul>
          </li>

        {% endif %}
      </ul>
    </div>
  </nav>
{% endspaceless %}

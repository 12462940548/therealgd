{% extends '@RadditApp/base.html.twig' %}
{% from '@RadditApp/submission/_macros.html.twig' import submission, submission_sort %}

{% block page_classes 'multi-forum-page' %}

{% block head %}
  {{ include('@RadditApp/_includes/meta_pagination.html.twig', {pager: submissions}, with_context=false) }}
{% endblock %}

{% block title '/f/'~forums|join(', /f/') %}

{% block body %}
  <nav class="submission-sort">
    <ul>{{ submission_sort(sort_by) }}</ul>
  </nav>

  {% for submission in submissions %}
    {{ submission(submission) }}
  {% endfor %}

  {{ include('@RadditApp/_includes/pagination.html.twig', {pager: submissions}, with_context=false) }}
{% endblock %}

{% block sidebar %}
  <section class="sidebar__section">
    <h1 class="sidebar__title">{{ 'heading.multi_forum_view'|trans }}</h1>

    <ul>
      {% for forum in forums %}
        <li><a href="{{ path('raddit_app_forum', {forum_name: forum}) }}">{{ forum }}</a></li>
      {% endfor %}
    </ul>
  </section>
{% endblock %}

{% extends '@RadditApp/forum_base.html.twig' %}

{% block title 'title.forum_appearance'|trans({'%forum%': '/f/%s'|format(forum.name)}) %}
{% block page_classes 'forum-appearance-page' %}

{% block body %}
  <h1>
    {{ 'title.forum_appearance'|trans({'%forum%': '<a href="%s">/f/%s</a>'|format(
      path('raddit_app_forum', {forum_name: forum.name})|escape,
      forum.name|escape
    )})|raw }}
  </h1>

  {{ form_start(form) }}
    {{ form_row(form.theme) }}

    {{ form_row(form.nightTheme) }}

    {# todo: some navigation widget thing #}
    <nav>
      <ul>
        <li><a href="{{ path('raddit_app_stylesheets') }}">{{ 'nav.themes'|trans }}</a></li>
        <li><a href="{{ path('raddit_app_create_stylesheet') }}">{{ 'nav.create_theme'|trans }}</a></li>
      </ul>
    </nav>
  {{ form_end(form) }}
{% endblock %}

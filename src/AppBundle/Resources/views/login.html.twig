{% extends '@RadditApp/base.html.twig' %}

{% block page_classes %}
  {{ parent() }}
  login-page
{% endblock %}

{% block body %}
  <form action="{{ path('raddit_app_login_check') }}" method="POST" class="login-form">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <fieldset>
      <legend>Log in</legend>

      {% if error %}
        <p class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
      {% endif %}

      <div class="row">
        <label for="login-username">Username</label>
        <input type="text" name="_username" autocomplete="off" id="login-username">
      </div>

      <div class="row">
        <label for="login-password">Password</label>
        <input type="password" name="_password" autocomplete="off" id="login-password">
      </div>

      <div class="row">
        <button type="submit">Log in</button>
      </div>
    </fieldset>
  </form>
{% endblock %}


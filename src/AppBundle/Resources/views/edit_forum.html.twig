{% extends '@RadditApp/forum_base.html.twig' %}

{% block page_classes %}edit-forum-page{% endblock %}
{% block title 'edit_forum.title'|trans({'%forum%': forum.name}) %}
{% set no_custom_stylesheets = true %}

{% block body %}
  {{ form_start(form) }}
    {{ form_row(form.name) }}

    {{ form_row(form.title) }}

    {{ form_row(form.description) }}

    {{ form_row(form.category) }}

    <div class="row">
      {{- form_errors(form.stylesheet) -}}
      {{- form_label(form.stylesheet) -}}
      {{- form_widget(form.stylesheet) }}
      <a href="{{ path('raddit_app_create_stylesheet') }}">{{ 'stylesheets.create_stylesheet'|trans }}</a>
    </div>

    {{ form_row(form.nightStylesheet) }}

    {% if form.featured is defined %}
      {{ form_row(form.featured) }}
    {% endif %}

    <div class="row">
      {{ form_widget(form.submit) }}

      {% if form.delete is defined %}
        {{ form_widget(form.delete, {attr: {class: 'delete-forum'}}) }}
      {% endif %}
    </div>
  {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <script>
    $('.delete-forum').click(function () {
      return confirm(Translator.trans('forum_form.confirm_delete'));
    });
  </script>
{% endblock %}
